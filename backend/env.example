# ========================================
# CYBERMARKET - CONFIGURAÇÃO DE AMBIENTE
# ========================================

# ========================================
# CONFIGURAÇÃO DO SERVIDOR
# ========================================
PORT=5000
NODE_ENV=development

# ========================================
# CONFIGURAÇÃO DO BANCO DE DADOS
# ========================================
# Para MongoDB Local:
MONGODB_URI=mongodb://localhost:27017/marketplace

# Para MongoDB Atlas (descomente e configure):
# MONGODB_URI=mongodb+srv://seu-usuario:sua-senha@cluster.mongodb.net/marketplace?retryWrites=true&w=majority

# ========================================
# CONFIGURAÇÃO JWT (AUTENTICAÇÃO)
# ========================================
# IMPORTANTE: Mude esta chave em produção!
JWT_SECRET=cybermarket-super-secret-jwt-key-2024-change-in-production
JWT_EXPIRES_IN=7d

# ========================================
# CONFIGURAÇÃO CORS (FRONTEND)
# ========================================
FRONTEND_URL=http://localhost:5173

# ========================================
# CONFIGURAÇÃO RATE LIMITING
# ========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# CONFIGURAÇÃO REDIS (CACHE - OPCIONAL)
# ========================================
# Para Redis Local:
REDIS_URL=redis://localhost:6379

# Para Redis Cloud (descomente e configure):
# REDIS_URL=redis://default:sua-senha@seu-redis.upstash.io:6379

# ========================================
# CONFIGURAÇÃO CLOUDINARY (IMAGENS - OPCIONAL)
# ========================================
# CLOUDINARY_CLOUD_NAME=seu-cloud-name
# CLOUDINARY_API_KEY=sua-api-key
# CLOUDINARY_API_SECRET=sua-api-secret

# ========================================
# CONFIGURAÇÃO STRIPE (PAGAMENTOS - OPCIONAL)
# ========================================
# STRIPE_SECRET_KEY=sk_test_sua-chave-stripe
# STRIPE_WEBHOOK_SECRET=whsec_sua-webhook-secret

# ========================================
# CONFIGURAÇÃO EMAIL (NOTIFICAÇÕES - OPCIONAL)
# ========================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=seu-email@gmail.com
# SMTP_PASS=sua-app-password

# ========================================
# CONFIGURAÇÃO DE LOGS
# ========================================
LOG_LEVEL=debug

# ========================================
# CONFIGURAÇÃO DE SEGURANÇA
# ========================================
# Chave para criptografia adicional (opcional)
ENCRYPTION_KEY=cybermarket-encryption-key-2024

# ========================================
# CONFIGURAÇÃO DE DESENVOLVIMENTO
# ========================================
# Habilitar logs detalhados
DEBUG=true

